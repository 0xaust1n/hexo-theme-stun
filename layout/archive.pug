extends includes/layout.pug

block content
  include ./includes/components/sidebar.pug
  include ./includes/mixins/articles-sort.pug

  div.archive
    div.archive-inner
      if (site.posts.length === 0)
        div.article-sort-title= _p('page.articles-0')
      else
        div.article-sort-title= _p('page.articles-1', site.posts.length)
    
      +articleSort(page.posts)
    include ./includes/components/pagination.pug
