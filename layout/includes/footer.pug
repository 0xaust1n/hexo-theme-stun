footer#footer
  - var date = new Date()
  - var nowYear = date.getFullYear()
  - var copyRight = theme.site_copyright
  - var startYear = copyRight ? copyRight.start || nowYear : nowYear
  - var endYear = copyRight ? copyRight.end || nowYear : nowYear

  .footer-inner
    p
      span!= _p('footer.powered', link_to('http://hexo.io', 'hexo', {external: true}))
      span.footer-separator |
      span= _p('footer.theme') + ' '
      span!= link_to('https://github.com/liuyib/hexo-theme-stun', 'stun', {external: true})
      span= ' v' + version() + '.'

    p
      if copyRight && copyRight.enable
        span!= `&copy; ${startYear}` + (startYear != endYear ? `-${endYear}` : '')
        span.footer-heart= '‚ù§'
        span= config.author + '. '
      if theme.ICP && theme.ICP.enable
        span= theme.ICP.text

    //- enable busuanzi to show PV / UV
    if theme.busuanzi && theme.busuanzi.enable
      include ./count/busuanzi.pug
