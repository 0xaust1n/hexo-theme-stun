if (hexo-config('footer_bg_img'))
  $footer-bg-img = hexo-config('footer_bg_img')

#footer
  font-size: $font-footer-base is defined ? $font-footer-base : 1rem
  background-color: $gray-dark
  background-attachment: fixed
  background-position: bottom
  background-size: cover

  if (hexo-config('footer_bg_img'))
    background-image: url($footer-bg-img)

  span
    vertical-align: middle

  a
    border-bottom: 0
    color: $footer-link-color

    &:hover
      color: $footer-link-hover-color

  span.footer-powered
    vertical-align: middle

    a
      vertical-align: middle

.footer-inner
  padding: 1rem
  text-align: center
  color: $footer-text-color
  cursor: default

  p
    margin: 5px 0
    line-height: 1.5em

  .footer-separator
    margin: 0 .3rem

  .footer-heart
    display: inline-block
    margin: 0 .3rem
    color: red
    animation: footer-heart-beat 1.4s infinite
