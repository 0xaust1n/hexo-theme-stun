headingLeft(fontsize)
  padding-left: unit(fontsize, 'rem')

  &:hover
    padding-left: fontsize + .3rem

    &::before
      color: $h-link-logo-hover-color

#main
  margin-bottom: 3rem

#main-inner
  overflow: hidden
  margin: 0 auto
  max-width: $content-desktop

.content
  float: left
  width: $main-desktop

  .post-header,
  .post-excerpt,
  .post-footer
    margin-bottom: 2em

  .post-header
    padding: 0

  .post-item
    margin: 0 0 2rem
    border-radius: 5px
    padding: 2rem
    width: 100%
    background-color: $white

    & > :first-child,
    .post-excerpt > :first-child
      margin-top: 0

    & > :last-child,
    .post-excerpt > :last-child
      margin-bottom: 0

  .post-footer
    .post-btn
      margin: 0 auto
      border-radius: 5px
      width: 6em
      text-align: center
      background-color: $home-post-read-more-color
      transition: background-color .2s ease
      cursor: pointer

      &:hover
        background-color: $home-post-read-more-hover-color

      a
        border-bottom: 0
        color: $white

.sidebar
  float: right
  width: $main-side-desktop

  .sidebar-inner
    border-radius: 5px
    padding: 1rem
    width: $main-side-desktop
    background-color: $white

    &.sticky
      position: fixed
      top: 30px

  .site-author
    margin-bottom: .8rem
    width: 100%

    &-avatar
      margin: 0 auto
      border-radius: 50%
      width: 150px
      height: 150px

      &:hover
        animation: $avatar-hover-animation .8s both ease-out

    &-description
      margin-bottom: 0
      font-size: 1.2em
      font-weight: $font-weight-bold
      text-align: center

  .site-social,
  .site-feed,
  .site-state
    &:not(:last-child)
      border-bottom: 1px dashed #d8d8d8

    a
      border-bottom: 0

  .site-social
    padding-bottom: 1rem

    ul,
    li
      list-style-type: none

    ul
      display: flex
      overflow: hidden
      margin: 0 auto
      padding: 0
      text-align: center
      flex-wrap: wrap
      justify-content: center

    li
      margin-right: 8px
      border-radius: 50%
      width: 1.5rem
      height: 1.5rem
      line-height: 1.5rem
      text-align: center
      background-color: $sidebar-social-color
      transition: background-color .2s
      flex: 0 0 auto

      &:hover
        background-color: $sidebar-social-hover-color

      &:last-child
        margin-right: 0

      a
        display: block
        border-radius: 50%
        color: #fff

  .site-feed
    display: flex
    margin-top: .5rem
    padding-bottom: .5rem
    font-size: 1.2em
    text-align: center
    justify-content: center

    .icon-email,
    .icon-rss
      margin-right: .4em

    &-email,
    &-rss
      margin: 0 auto

    &-email > a
      color: $sidebar-feed-email-color

    &-rss > a
      color: $sidebar-feed-rss-color

  .site-state
    display: flex
    margin-top: 1rem
    flex-wrap: wrap
    justify-content: center

    &-item
      margin-right: .5rem
      border-right: 1px solid #eee
      padding-right: .5rem
      line-height: 1.6em
      text-align: center

      &:last-child
        margin: 0
        border: 0
        padding: 0

      &-count
        font-weight: $font-weight-bold
        color: $black-dark

    &-posts > a
      color: $sidebar-state-post-color

    &-categories > a
      color: $sidebar-state-category-color

    &-tags > a
      color: $sidebar-state-tag-color
