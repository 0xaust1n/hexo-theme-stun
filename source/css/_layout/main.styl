headingLeft(fontsize)
  padding-left: unit(fontsize, 'rem')

  &:hover
    padding-left: fontsize + .3rem

    &::before
      color: $h-link-logo-hover-color

#main
  margin-bottom: 3rem

#main-inner
  margin: 0 auto
  max-width: $content-desktop
  overflow: hidden

.content
  float: left
  width: $main-desktop

  .post-header,
  .post-excerpt,
  .post-footer
    margin-bottom: 2em

  .post-header
    padding: 0

  .post-item
    background-color: $white
    border-radius: 5px
    margin: 0 0 2rem
    padding: 2rem
    width: 100%

    & > :first-child,
    .post-excerpt > :first-child
      margin-top: 0

    & > :last-child,
    .post-excerpt > :last-child
      margin-bottom: 0

  .post-footer
    .post-btn
      background-color: alpha($blue-light, .8)
      border-radius: 5px
      cursor: pointer
      margin: 0 auto
      text-align: center
      transition: background-color .2s ease
      width: 6em

      &:hover
        background-color: $blue-light

      a
        border-bottom: 0
        color: $white

.aside
  background-color: $white
  border-radius: 5px
  display: block
  float: right
  height: 100%
  padding: 1rem
  width: $main-side-desktop
