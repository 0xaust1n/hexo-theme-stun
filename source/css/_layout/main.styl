headingLeft(fontsize)
  padding-left: unit(fontsize, 'rem')

  &:hover
    padding-left: fontsize + .3rem

    &::before
      color: $h-link-logo-hover-color

#main
  margin-bottom: 3rem

#main-inner
  overflow: hidden
  margin: 0 auto
  max-width: $content-desktop

.content
  float: left
  width: $main-desktop

  .post-header,
  .post-excerpt,
  .post-footer
    margin-bottom: 2em

  .post-header
    padding: 0

  .post-item
    margin: 0 0 2rem
    border-radius: 5px
    padding: 2rem
    width: 100%
    background-color: $white

    & > :first-child,
    .post-excerpt > :first-child
      margin-top: 0

    & > :last-child,
    .post-excerpt > :last-child
      margin-bottom: 0

  .post-footer
    .post-btn
      margin: 0 auto
      border-radius: 5px
      width: 6em
      text-align: center
      background-color: alpha($blue-light, .8)
      transition: background-color .2s ease
      cursor: pointer

      &:hover
        background-color: $blue-light

      a
        border-bottom: 0
        color: $white

.sidebar
  display: block
  float: right
  border-radius: 5px
  padding: 1rem
  width: $main-side-desktop
  height: 100%
  background-color: $white

  .site-author
    width: 100%

    &-avatar
      margin: 0 auto
      border-radius: 50%
      width: 150px
      width: 150px

      &:hover
        animation: $avatar-hover-animation .8s both ease-out

    &-description
      font-weight: $font-weight-bold
      text-align: center

  .site-social,
  .site-feed
    a
      border-bottom: 0

  .site-social
    ul,
    li
      list-style-type: none

    ul
      overflow: hidden
      padding: 0

    li
      float: left
      border-radius: 50%
      width: 1.5rem
      height: 1.5rem
      font-size: 1em
      line-height: 1.5rem
      text-align: center
      background-color: alpha($blue-light, .6)

      &:not(:last-child)
        margin-right: .5rem

      a
        color: #fff

  .site-feed
    border-width: 1px 0 1px 0
    border-style: dashed
    border-color: #d8d8d8
    padding: .5rem 0
    text-align: center

    &-mail
      a
        color: alpha($blue-light, .9)

    &-rss
      a
        color: alpha($orange-dark, .9)