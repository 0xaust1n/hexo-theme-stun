#container
  display: flex
  min-height: 100vh
  flex-direction: column

#main
  margin-bottom: 3rem
  flex: 1 auto

.main-inner
  margin: 0 auto

if (hexo-config('sidebar.display') == 'always')
  if (hexo-config('sidebar.float') == 'left')
    $content-show
      float: right
  else
    $content-show
      float: left
else
  $content-show
    margin: 0 auto

.home-content
  font-size: $font-main-base
  @extend $content-show

  img
    max-width: 100%
