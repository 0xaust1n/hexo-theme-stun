setUlStyle(content, hoverColor)
  &::before
    content: content
    position: absolute
    top: 0
    left: -1.3em
    font-size: .5em
    line-height: 2.8em
    color: $ul-list-color
    transition: color .2s ease
    @extend $font-face

  &:hover
    &::before
      color: hoverColor

$content-layout
  border-radius: 5px
  padding: 2rem
  font-size: $font-main-base
  background-color: $white
  // Config item in the _config.yml will effect this.
  @extend $content-position

  & > :first-child
    margin-top: 0

  & > :last-child
    margin-bottom: 0

.main-content-layout
  @extend $content-layout

$text_vertical_align_with_img = convert(
  hexo-config('text_vertical_align_with_img') || 'bottom')

.main-content
  @extend $content-layout

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    position: relative
    margin: 1.5rem 0 1rem
    font-weight: $font-weight-bolder
    line-height: $line-height-h
    color: lighten($h-color, 15%)
    cursor: pointer

    // show icon before heading
    if ($icon-h-link)
      &:not(.post-title)::after
        content: $icon-h-link
        height: 100%
        line-height: $line-height-h
        color: $h-link-logo-color
        opacity: 0
        transition: opacity .1s ease
        @extend $font-face

    &:hover
      &::after
        opacity: 1

  for size in 1 .. 6
    h{size}
      font-size: $h-font-size[size - 1]

      &::after
        margin-left: .8rem - .1 * size

  img
    max-width: 100%
    vertical-align: $text_vertical_align_with_img

  ul,
  ol
    margin: .5rem 0
    padding-left: 2em

  li
    position: relative
    margin: .2em 0

    if ($icon-ul-list-1 is defined && ($icon-ul-list-2 is defined && ($icon-ul-list-3 is defined)))
      list-style-type: none

  ul
    li
      setUlStyle($icon-ul-list-1, $ul-list-hover-color)

      ul
        li
          setUlStyle($icon-ul-list-2, $ul-list-hover-color)

          ul
            li
              setUlStyle($icon-ul-list-3, $ul-list-hover-color)

  ol
    counter-reset: ol-li

    & > li
      margin: .4em 0

      &::before
        content: counter(ol-li) '.'
        position: absolute
        left: -1.5em
        text-align: right
        color: $blue-light
        counter-increment: ol-li

  blockquote
    margin: 0 0 1rem

    & > :first-child
      margin-top: 0

    & > :last-child
      margin-bottom: 0

    & + blockquote
      padding-top: 0

    figure
      margin-top: 0
      margin-bottom: 0

    cite
      &::before
        content: '--'
        padding: 0 .2em

  table
    border-spacing: 0
    border-collapse: collapse
    margin: 0 auto 1rem
    min-width: 100%

    th,
    td
      border: 1px solid #eee

.archive
  float: left
  border-radius: 5px
  padding: 2rem
  width: $main-desktop
  background-color: $white

.archive-inner,
.tag-inner
  position: relative
  margin-left: 2rem

  &::before
    content: ''
    position: absolute
    top: $font-main-base
    bottom: $font-main-base
    left: 0
    border-left: .2rem solid $archives-left-line-color
    transform: translate(-50%, 0)

.article-sort-title
  position: relative
  margin-bottom: 1.3rem
  padding-left: 1.4rem
  font-size: $font-main-base

  &::before
    content: ''
    position: absolute
    top: 50%
    left: 0
    z-index: $z-index-2
    border: .25rem solid $archives-left-dot-color
    border-radius: 50%
    width: 1rem
    height: 1rem
    line-height: 1.2rem
    background-color: $white
    transition: all .2s ease
    transform: translate(-50%, -50%)

.article-sort-item
  display: flex
  position: relative
  margin-bottom: .8rem
  padding-left: 1.4rem
  align-items: center

  h2
    margin: 0
    font-weight: $font-weight-normal
    line-height: $line-height-h

  &:last-child
    margin-bottom: 0

  &:not(.year):hover
    &::before
      border-color: $archives-left-dot-hover-color

  &::before
    content: ''
    position: absolute
    top: 50%
    left: 0
    z-index: $z-index-2
    border: .15rem solid $archives-left-dot-color
    border-radius: 50%
    width: .6rem
    height: .6rem
    background-color: $white
    transition: all .2s ease
    transform: translate(-50%, -50%)

  &.year
    display: block
    position: relative
    font-size: $font-main-base
    font-weight: $font-weight-bolder

  &__time
    margin-right: 1rem
    font-size: $font-main-base
    color: $archives-right-time-color
    transform: translate(0, 8%)

  &__title a
    border-bottom: 0
    font-size: $font-main-base
    text-decoration: none
    color: $font-color
    cursor: pointer

    &:hover
      border-bottom: 0
      color: $blue-light !important

.tag-cloud,
.category
  a
    margin: 0 .4rem
    border-bottom: 0

  &-title
    padding: 0 0 1.8rem
    font-size: $font-main-base
    text-align: center
    cursor: default

.tag-cloud
  text-align: center

  a
    &:hover
      color: $tags-hover-color !important

.category
  font-size: $font-main-base

  a
    color: $categories-link-color

    &:hover
      color: $categories-link-hover-color

  .category-list-item
    &::before
      color: $categories-list-dot-color

    &:hover
      &::before
        color: $categories-list-dot-hover-color

  .category-list-count
    padding-left: .3em
    font-size: $font-main-base
    color: $categories-post-count-color

    &::before
      content: '('

    &::after
      content: ')'

.about
  width: $main-desktop
