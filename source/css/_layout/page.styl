setUlStyle(content, hoverColor)
  &::before
    content: content
    position: absolute 
    top: 0
    left: -1.3em
    line-height: 2em
    color: $blue-light
    font-family: 'fontStun'
    font-size: 1em
    transition: color .2s ease

  &:hover
    &::before
      color: hoverColor

.main-content
  width: $main-desktop
  padding: 2rem
  border-radius: 5px
  background-color #fff

  h1, h2, h3, h4, h5, h6
    cursor: pointer

    a
      text-decoration: none
      border-bottom: 0
      color: inherit

      &:hover
        color: inherit

    // Enable heading`s icon
    if ($icon-h-link is defined)
      position: relative
      transition: padding-left .3s ease

      &::before
        display: block
        content: $icon-h-link
        position: absolute
        left: 0
        top: 0
        height: 100%
        line-height: $line-height-h
        font-family: "fontStun"
        color: $h-link-logo-color
        transition: color .3s ease

  for size in 1..6
    h{size}
      if ($icon-h-link is defined)
        headingLeft(1.45 - 0.1 * size)

  ul, ol
    margin: 0
    padding-left: 2em

  li
    position: relative
    margin: .2em 0

    if ($icon-ul-list-1 is defined && $icon-ul-list-2 is defined && $icon-ul-list-3 is defined)
      list-style-type: none
  
  ul
    li
      setUlStyle($icon-ul-list-1, #fc0)
      ul
        li
          setUlStyle($icon-ul-list-2, #fc0)
          ul
            li
              setUlStyle($icon-ul-list-3, #fc0)
      
  ol
    counter-reset: ol-li

    & > li
      margin: .4em 0

      &::before
        content: counter(ol-li, $icon-ol-list-style) '.'
        counter-increment: ol-li
        position: absolute
        left: -1.5em
        text-align: right
        color: $blue-light

  // Code in the post
  figure.highlight
    position: relative
    min-width: 100%
    margin: 1rem 0
    background-color #f7f7f7
    overflow-y: hidden
    overflow-x: auto
    
    pre
      margin: 0
      font-family: $code-family

    --table-header-height = 1.5rem
    
    table
      position: relative
      width: 100%
      border-spacing: 0
      padding: --table-header-height 0 0 0

      &::before
        content: 'TODO'
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: --table-header-height
        line-height: --table-header-height
        border-top-left-radius: 3px
        border-top-right-radius: 3px
        padding-left: 1rem 
        background-color #eff2f3
        font-weight: $font-weight-bolder
    
      // The line number of code
      td.gutter
        width: 1rem
        border-bottom-left-radius: 3px
        padding: 0 .5rem
        line-height: $line-height-code-block
        text-align: center
        background-color #eff2f3
        color: #b6b6b6

      // Code content
      td.code
        border-bottom-right-radius: 3px
        padding: .5rem
        line-height: $line-height-code-block
  
  blockquote
    margin: 0

    & > *
      margin-top: 0 !important
    
    & > *:last-child
      margin-bottom: 0 !important

    figure
      margin-top: 0 !important
      margin-bottom: 0 !important

    & + blockquote
      padding-top: 0
  
  & > :first-child
    margin-top: 0 !important
  & > :last-child
    margin-bottom: 0 !important

.archive
  width: $main-desktop
  padding: 3rem 2rem

.archive-inner
  position: relative
  margin-left: 2rem
  
  &::before
    position: absolute
    content: ''
    left: -0.1rem
    top: .2rem
    height: calc(100% - 1rem)
    border-left: .2rem solid $blue-light

.article-sort-title
  position: relative
  margin-bottom: 1.3rem
  padding-left: 1.4rem
  font-size: 1.2rem
  line-height: 1

  &::before
    z-index: $z-index-2
    content: ''
    position: absolute
    left: -0.6rem
    top: .1rem
    width: 1.2rem
    height: 1.2rem
    line-height: 1.2rem
    border: .25rem solid $blue-light
    border-radius: 50%
    background-color: #fff    
    transition: all .2s ease

.article-sort-item
  position: relative
  margin-bottom: .8rem
  padding-left: 1.4rem

  h2
    display: inline-block
    margin: 0
    font-weight: $font-weight-normal

  &:not(.year):hover
    &::before
      border-color: $orange-dark

  &::before
    z-index: $z-index-2
    content: ''
    position: absolute
    left: -0.4rem
    top: calc(50% - .4rem)
    width: .8rem
    height: .8rem
    border: .2rem solid $blue-light
    border-radius: 50%
    background-color #fff
    transition: all .2s ease

  &.year
    position: relative
    font-size: 1rem
    font-weight: $font-weight-bolder
    margin-bottom: 1.3rem
  
  &__time
    color: #99a9bf
    margin-right: 1rem
    
  &__title
    border-bottom: 0
    color: $font-color
    font-size: .9rem
    text-decoration: none
    cursor: pointer

    &:hover
      border-bottom: 0
      color: $blue-light !important

.tag-cloud
  padding: 3rem  5rem 9rem 5rem
  text-align: center

  a
    margin: 0 .4rem
    border-bottom: 0
    text-decoration: none

    &:hover
      color: $link-hover-color !important

  &-title
    padding: 0 0 1.8rem 0
    font-size: 1.8rem
    cursor: default

.about
  width: $main-desktop
