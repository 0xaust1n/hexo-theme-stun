.post-header
  margin: 0 0 1rem
  text-align: center

  .post-title
    margin: 0 0 .5rem
    padding-left: 0
    font-size: $font-post-title is defined ? $font-post-title : 2rem
    word-wrap: break-word
    color: $post-info-title-color

    &::before
      content: ''

    &:hover
      padding-left: 0

  .post-meta
    *::before,
    *::after
      margin-right: .2rem
      font-family: $font-icon-family
    
    .dot
      margin: 0 .5rem
      color: #666

    &-create
      color: $post-info-create-color

      &::before
        content: $icon-post-create-before

    &-word
      color: $post-info-word-count-color

      &::before
        content: $icon-post-word-before

    &-read
      color: $post-info-read-count-color

      &::before
        content: $icon-post-read-before

      &::after
        content: $icon-post-read-after

if (hexo-config('img_horizonal_align') == 'left')
  img_horizonal_align = 0 auto 0 0
else if (hexo-config('img_horizonal_align') == 'center')
  img_horizonal_align = auto
else if (hexo-config('img_horizonal_align') == 'right')
  img_horizonal_align = 0 0 0 auto
else
  img_horizonal_align = null

.post-body,
#recent-posts
  if (img_horizonal_align != null)
    img
      display: block
      margin: img_horizonal_align

.post-body
  #more
    border: 0

.post-footer
  &-copyright
    margin: 1.2rem 0
    border: 1px solid #e6e6e6
    border-radius: 2px
    padding: .8rem 1rem
    width: 100%
    transition: box-shadow .2s

    &:hover
      box-shadow: 0 0 4px 4px #f5f5f5

    .copyright-name
      margin-right: .5rem
      font-weight: $font-weight-bold
      white-space: nowrap

    .copyright-value
      word-break: break-all
      color: $font-color

  &-tags
    margin-bottom: 1rem

    &::before
      content: $nav-tag-2
      margin-left: 3px
      font-family: $font-icon-family
      color: $post-tags-icon-color

    span
      margin: 0 .5rem
