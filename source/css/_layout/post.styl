#post
  width: $main-desktop
  padding: 2rem
  border-radius: 5px
  background-color #fff

#post-header
  padding: 0 0 3rem 0
  text-align: center
  
  .post-title
    margin: 0
    padding-left: 0
    font-size: 2rem
    color: #444
    cursor: default

    &::before
      content: ''
    
    &:hover
      padding-left: 0

  .post-meta
    .dot
      margin: 0 .5rem
      color: #666

    &-create
      color: #00a7e0
    
    &-word
      color: #333
    
    &-read
      color: #ff3f1a