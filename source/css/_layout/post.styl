setUlStyle(content, hoverColor)
  &::before
    content: content
    position: absolute 
    top: 0
    left: -1.3em
    line-height: 2em
    color: $blue-light
    font-family: 'fontStun'
    font-size: 1em
    transition: color .2s ease

  &:hover
    &::before
      color: hoverColor

#post
  width: $main-desktop
  padding: 2rem
  border-radius: 5px
  background-color #fff

  h1, h2, h3, h4, h5, h6
    cursor: pointer

    a
      text-decoration: none
      border-bottom: 0
      color: inherit

      &:hover
        color: inherit

    // Enable heading`s icon
    if ($icon-h-link is defined)
      position: relative
      transition: padding-left .3s ease

      &::before
        display: block
        content: $icon-h-link
        position: absolute
        left: 0
        top: 0
        height: 100%
        line-height: $line-height-h
        font-family: "fontStun"
        color: $h-link-logo-color
        transition: color .3s ease

  for size in 1..6
    h{size}
      if ($icon-h-link is defined)
        headingLeft(1.45 - 0.1 * size)

  ul, ol
    margin: 0
    padding-left: 2em

  li
    position: relative
    margin: .2em 0

    if ($icon-ul-list-1 is defined && $icon-ul-list-2 is defined && $icon-ul-list-3 is defined)
      list-style-type: none
  
  ul
    li
      setUlStyle($icon-ul-list-1, #fc0)
      ul
        li
          setUlStyle($icon-ul-list-2, #fc0)
          ul
            li
              setUlStyle($icon-ul-list-3, #fc0)
      
  ol
    counter-reset: ol-li

    & > li
      margin: .4em 0

      &::before
        content: counter(ol-li, $icon-ol-list-style) '.'
        counter-increment: ol-li
        position: absolute
        left: -1.5em
        text-align: right
        color: $blue-light

  // Code in the post
  figure.highlight
    position: relative
    min-width: 100%
    margin: 1rem 0
    background-color #f7f7f7
    overflow-y: hidden
    overflow-x: auto
    
    pre
      margin: 0
      font-family: $code-family

    --table-header-height = 1.5rem
    
    table
      position: relative
      width: 100%
      border-spacing: 0
      padding: --table-header-height 0 0 0

      &::before
        content: 'TODO'
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: --table-header-height
        line-height: --table-header-height
        border-top-left-radius: 3px
        border-top-right-radius: 3px
        padding-left: 1rem 
        background-color #eff2f3
        font-weight: $font-weight-bolder
    
      // The line number of code
      td.gutter
        width: 1rem
        border-bottom-left-radius: 3px
        padding: 0 .5rem
        line-height: $line-height-code-block
        text-align: center
        background-color #eff2f3
        color: #b6b6b6

      // Code content
      td.code
        border-bottom-right-radius: 3px
        padding: .5rem
        line-height: $line-height-code-block
  
  blockquote
    margin: 0

    & > *
      margin-top: 0 !important
    
    & > *:last-child
      margin-bottom: 0 !important

    figure
      margin-top: 0 !important
      margin-bottom: 0 !important

    & + blockquote
      padding-top: 0

#post-header
  padding: 0 0 3rem 0
  text-align: center
  
  .post-title
    margin: 0
    padding-left: 0
    font-size: 2rem
    color: #444
    cursor: default

    &::before
      content: ''
    
    &:hover
      padding-left: 0

  .post-meta
    *::before, *::after
      margin-right: .2rem
      font-family: 'fontStun'
    
    &-create, &-word, &-read
      margin-right: .2rem
    
    .dot
      margin: 0 .5rem
      color: #666

    &-create
      color: #00a7e0

      &::before
        content: $icon-post-create-before
    
    &-word
      color: #333

      &::before
        content: $icon-post-word-before
    
    &-read
      color: #ff3f1a

      &::before
        content: $icon-post-read-before
      
      &::after
        content: $icon-post-read-after
