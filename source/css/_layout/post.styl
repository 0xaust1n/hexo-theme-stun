.post-header
  padding: 0 0 3rem 0
  text-align: center
  
  .post-title
    margin: 0
    padding-left: 0
    font-size: 2rem
    color: #444
    cursor: default

    &::before
      content: ''
    
    &:hover
      padding-left: 0

  .post-meta
    *::before, *::after
      margin-right: .2rem
      font-family: 'fontStun'
    
    &-create, &-word, &-read
      margin-right: .2rem
    
    .dot
      margin: 0 .5rem
      color: #666

    &-create
      color: #00a7e0

      &::before
        content: $icon-post-create-before
    
    &-word
      color: #333

      &::before
        content: $icon-post-word-before
    
    &-read
      color: #ff3f1a

      &::before
        content: $icon-post-read-before
      
      &::after
        content: $icon-post-read-after
