clearfix() {
  &::before,
  &::after {
    content: ' ';
    display: table;
  }

  &::after {
    clear: both;
  }
}

word-wrap() {
  word-wrap: break-word;
  overflow-wrap: break-word;
}

layout-card() {
  border-radius: 5px;
  padding: 1rem 2rem;
  background-color: var(--color-gray-150);
}

fontawesome-base() {
  font: normal normal normal 14px / 1 $font-family-icons;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
