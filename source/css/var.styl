// ==========================================
// Global variables
// ==========================================

// Define global color
$black-light   = #666
$black-dark    = #333
$gray-light    = #c2c2c2
$gray-dark     = #888
$blue-light    = #49b1f5
$blue-lighter  = #a4d8fa
$orange-dark   = #fc6423
$white         = #fff
$white-light   = #f4f5f5
$white-dark    = #e3e4e4

// Text
$font-color    = $black-light

// Background color for <body>
$body-bg-color = $white-light

// Link
$link-color              = #b00
$link-hover-color        = #f00
$link-bottom-color       = #fc0
$link-bottom-hover-color = #f0c

// Selection
$selection-bg            = #00c4b6
$selection-color         = #fff

// Header
$header-nav-bg-color     = $black-dark
$header-text-color       = $white-light
$header-text-hover-color = $gray-light
$header-link-color       = $header-text-color
$header-link-hover-color = $blue-light

// Footer
$footer-text-color       = #eee
$footer-bg-color         = #333
$footer-link-color       = $link-color
$footer-link-hover-color = $link-hover-color

// Heading
$h-link-logo-color       = #f47466
$h-link-logo-hover-color = $blue-light
$h-font-size-base        = 24px
$h-font-size-step        = 2px
$h-color                 = #222;

// Horizon line
$hr-color                = #fc0
$hr-icon-color           = #999

// Blockquote
$quote-bg-color          = #e8e8e8
$quote-left-color        = #009a61

// Code block
$code-bg-color           = #f6f0f2
$code-color              = #c7254e
$code-family             = "Source Code Pro", Consolas, Menlo, Monaco, "Courier New", monospace

// Img
$img-border-width        = 1px
$img-border-color        = #dadefb

// -------------------------------------------
// Icon font
// -------------------------------------------

// Define icon font
// -------------------------------------------
// Icon for nav menu
$nav-home-1              = '\e815'
$nav-home-2              = '\e802'
$nav-archive-1           = '\e803'
$nav-archive-2           = '\e811'
$nav-category-1          = '\e813'
$nav-category-2          = '\e804'
$nav-tag-1               = '\e808'
$nav-tag-2               = '\e812'
$nav-about-1             = '\e805'
$nav-about-2             = '\e814'

// Icon for search
$nav-search              = '\e800'

// Icon for <hr>
$icon-hr-plane-1         = '\f0fb'
$icon-hr-plane-2         = '\f197'
$icon-hr-plane-3         = '\e80e'

// Icon for <h>
$icon-h-chain-1          = '\e801'
$icon-h-chain-2          = '\e80b'
$icon-h-pin              = '\e80f'
$icon-h-hash             = '\f029'
$icon-h-anchor           = '\e81f'
$icon-h-paw              = '\f1b0'

// Icon for <ol>
$icon-ul-list-dot        = '\e807'
$icon-ul-list-dot-empty  = '\e80c'
$icon-ul-list-rect       = '\e80a'

// Icon before article
$icon-post-create-1      = '\e806'
$icon-post-create-2      = '\f133'
$icon-post-word-1        = '\f1c2'
$icon-post-word-2        = '\f0f6'
$icon-post-eye           = '\e809'
$icon-post-fire          = '\e80d'
$icon-post-celsius       = '\ \2103'

$icon-left-arrow         = '\e810'
$icon-right-arrow        = '\e816'

// -------------------------------------------
// 站点头像的鼠标 hover 动画，可选值如下：
// avatar-shake  // 抖动动画
// avatar-turn   // 旋转动画
$avatar-hover-animation =  'avatar-shake'

// -------------------------------------------
// 启用磨砂玻璃效果
$is-site-info-blur     = true   // 是否启用毛玻璃效果
$is-site-info-blur-bg  = false  // 是否启用毛玻璃效果的背景颜色
$site-info-blur        = 8px    // 模糊程度
$site-info-blur-radius = -20px  // 模糊半径（负数：模糊半径减小）

// 启用图标（注释掉即可关闭图标）
// -------------------------------------------
// 导航栏菜单
$nav-home                = $nav-home-2
$nav-archive             = $nav-archive-2
$nav-category            = $nav-category-2
$nav-tag                 = $nav-tag-2
$nav-about               = $nav-about-2
$nav-search              = $nav-search-2

// 水平线
$icon-hr                 = $icon-hr-plane-1

// 文章副标题
$icon-h-link             = $icon-h-anchor

// 无序列表
$icon-ul-list-1          = $icon-ul-list-dot
$icon-ul-list-2          = $icon-ul-list-dot-empty
$icon-ul-list-3          = $icon-ul-list-rect

// 有序列表序号的样式，可选的值如下：
// decimal               // 数字
// decimal-leading-zero  // 个位前面加零的数字

// lower-roman           // 小写罗马字符
// upper-roman           // 大写罗马字符

// lower-greek           // 希腊字符
 
// lower-latin           // 小写拉丁字符（英文）
// upper-latin           // 大写拉丁字符

// armenian
// georgian
$icon-ol-list-style      = lower-latin

// 文章头部信息
$icon-post-create-before = $icon-post-create-1
$icon-post-word-before   = $icon-post-word-1
$icon-post-read-before   = $icon-post-fire
$icon-post-read-after    = $icon-post-celsius

// 上 / 下一项
$icon-prev               = $icon-left-arrow
$icon-next               = $icon-right-arrow

// -------------------------------------------
// Font, line-height
// -------------------------------------------
// Line height
$line-height-base       = 2    // 基础行高
$line-height-h          = 1.5
$line-height-code-block = 1.7  // 不能小于 1.3

// Font size
$font-size-rem          = 20px
$font-size-base         = 14px // 基础字体大小
$font-size-small        = $font-size-base - 2px;
$font-size-smaller      = $font-size-base - 4px;
$font-size-large        = $font-size-base + 2px;
$font-size-larger       = $font-size-base + 4px;

// Font family
$font-family            = PingFang SC, Microsoft YaHei, Lato, sans-serif, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Hiragino Sans GB, Helvetica Neue, Helvetica, Arial

// Font weight
$font-weight-light      = 300
$font-weight-normal     = 400
$font-weight-bold       = 600
$font-weight-bolder     = 700

// -------------------------------------------
// z-index list
// -------------------------------------------
$z-index-0 = -1
$z-index-1 = 1000
$z-index-2 = 1001
$z-index-3 = 1002
$z-index-4 = 1003
$z-index-5 = 1004

// -------------------------------------------
// Layout
// -------------------------------------------

// Width
$content-desktop   = 1110px
$main-desktop      = 772px
$main-side-desktop = 315px

// Header
$header-nav-height = 60px

// Footer
$footer-min-height = 40px
$footer-bg         = "../imgs/demo/stun-bg.jpg"
