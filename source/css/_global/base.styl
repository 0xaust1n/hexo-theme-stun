::selection
  color: $selection-color
  background: $selection-bg

:root
  box-sizing: border-box

*,
*::before,
*::after
  box-sizing: inherit

html
  font-size: $font-size-rem
  line-height: 100%

body
  position: relative
  margin: 0
  font-family: $font-family
  font-size: $font-size-base
  line-height: $line-height-base
  color: $font-color
  background-color: $body-bg-color

#container
  display: flex
  min-height: 100vh
  flex-direction: column

#main
  flex: 1 auto

// Not global, only min-content class
.main-content
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    position: relative
    margin: 1.5rem 0 1rem
    font-weight: $font-weight-bolder
    line-height: $line-height-h
    color: lighten($h-color, 15%)

  for size in (1 .. 6)
    h{size}
      font-size: $h-font-size-base - $h-font-size-step * size

p
  margin: .5rem 0

a
  border-bottom: 1px solid $link-bottom-color
  text-decoration: none
  color: $link-color
  outline: none
  transition: .2s all ease
  cursor: pointer

  &:hover
    border-bottom: 1px solid $link-bottom-hover-color
    color: $link-hover-color

img
  display: block
  border-radius: 3px

  if ($img-border-width != 0)
    border: $img-border-width solid $img-border-color
    padding: .3rem

  vertical-align: middle

hr
  position: relative
  margin: 1rem 0
  border: 2px dashed $hr-color
  width: $icon-hr is defined ? calc(100% - 1.5rem) : 100%
  height: 0

  &::after
    content: $icon-hr
    display: block
    position: absolute
    top: calc(50% - 1rem - 1px)
    right: -1.5rem
    width: 1.5rem
    height: 2rem
    font-family: 'fontStun'
    font-size: 26px
    line-height: 2rem
    color: $hr-icon-color

blockquote
  border-left: 5px solid $quote-left-color
  padding: .5rem 1rem
  background-color: $quote-bg-color

code
  border-radius: 3px
  padding: 2px 4px
  font-family: $code-family
  font-size: .94em
  word-wrap: break-word
  color: $code-color
  background-color: $code-bg-color
