
// Gallery in post / page.
.gallery-image {
  margin-bottom: convert(hexo-config('gallery_waterfall.gap_y') || '10px');
  width: convert(hexo-config('gallery_waterfall.col_width') || '220px');
}

.zoom-image-mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: $z-index2;
  width: 100%;
  height: 100%;
  background-color: convert(hexo-config('zoom_image.mask_color') || '#fff');
  opacity: 0;
  will-change: opacity;
}

// Zoom in image without fancybox.
.zoom-image {
  cursor: zoom-in;

  &.hide {
    visibility: hidden;
  }

  &.show {
    clearImgStyle();
    position: absolute;
    z-index: $z-index2;
    margin: 0;
    box-sizing: content-box;
    cursor: zoom-out;
    will-change: transform;
  }
}
