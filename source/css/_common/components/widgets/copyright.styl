.post-copyright {
  position: relative;
  margin: 0 0 1rem;
  border: 1px solid var(--color-gray-250);
  padding: .8rem 1rem;
  width: 100%;
  transition-property: box-shadow;
  transition-ease();

  &:hover {
    box-shadow: 0 0 12px 8px var(--color-gray-250);
  }

  &-author,
  &-link,
  &-notice {
    &-name {
      font-weight: $font-weight-bold;
      word-wrap();
    }

    &-value {
      color: var(--color-gray-800);
      word-wrap();
    }
  }
}
