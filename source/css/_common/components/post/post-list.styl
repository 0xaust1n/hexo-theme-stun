// Only in homepage.
.post {
  margin: 0 0 1.5rem;
  border-radius: 5px;
  padding: 1.5rem 2rem;
  width: 100%;
  background-color: $white;

  &-body {
    &-excerpt {
      & *:last-child {
        margin-bottom: 0;
      }
    }

    &-more {
      margin-top: 1.5rem;
      text-align: center;

      &__a {
        display: inline-block;
        border-radius: 5px;
        padding: 0 .6em;
        color: $white;
        background-color: $home-readmore-bg-color;
        transition: background-color .2s ease;
        cursor: pointer;

        &:hover {
          color: $white;
          background-color: $home-readmore-bg-hover-color;
        }
      }
    }
  }
}

.post-link-title {
  .post-header {
    margin: 0 0 .5rem;
  }

  .post-body {
    &-excerpt {
      margin: 0;
    }
  }
}
