// $content-desktop: 1340px
// -----------------------------------------
@media screen and (min-width: $content-desktop)
  #header
    width: 100%

  .header-nav-inner
    width: $content-desktop

  .main-inner
    width: $content-desktop

@media screen and (max-width: $content-desktop)
  .header-nav-inner
    width: 100%

  .header-info-inner
    .site-info-title
      font-size: 2rem

    .site-info-subtitle
      font-size: 1.75rem

  #sidebar
    display: none

  .main-content,
  .home-content
    float: none
    margin: 0 auto

  .main-content-layout
    float: none
    margin: 0 auto

  .comments
    margin: 1.5rem auto 0

// $md-width: 992px
// -----------------------------------------
@media screen and (min-width: $md-width)
  .main-content-layout,
  .main-content,
  .comments
    width: $main-desktop

  .home-content
    width: $main-desktop

@media screen and (max-width: $md-width)
  #header,
  #footer
    background-attachment: local

  #header
    height: 300px

  #header,
  #main
    margin-bottom: 2rem

  .main-content
    padding: 1.5rem
    width: 100%

  .home-content
    width: 100%

  .main-content-layout
    width: 100%

// sm-width: 768px
// -----------------------------------------
@media screen and (min-width: $sm-width)
  .header-nav-inner
    .header-nav-menu
      visibility: visible
      opacity: 1

@media screen and (max-width: $sm-width)
  .header-nav-menu
    visibility: hidden
    border-radius: 3px
    width: 100%
    height: auto
    background-color: alpha($header-nav-bg-color, .7)
    opacity: 0

    span
      float: none
      margin: 0

    a
      padding: 0 1rem
      color: $white-light !important
      user-select: none

      &:hover
        color: $white-light
        background-color: $blue-lighter

  .header-nav-menu-icon
    display: block
    float: left

  .header-info-inner
    .site-info-title
      font-size: 2rem

    .site-info-subtitle
      font-size: 1.5rem
  
  div.algolia-popup
    left: 0
    margin: 0 1rem
    width: calc(100% - 2rem)

// $xs-width: 576px
// -----------------------------------------
@media screen and (max-width: $xs-width)
  #header
    height: 240px

  #header,
  #main
    margin-bottom: 1.5rem

  .header-info-inner
    .site-info-title
      font-size: 1.75rem

    .site-info-subtitle
      font-size: 1.25rem

  .header-nav-search
    span
      display: none
    
  div.algolia-results
    max-height: 10rem
    
    .algolia-hit-item
      margin: 0

  .main-content
    padding: 1rem

  .post-header
    .post-title
      font-size: 1.25rem

    .post-meta
      &-create,
      &-read,
      &-word
        :first-child
          display: none

      .dot
        margin: 0 .3rem

  .reward-qr
    flex-direction: column

  #recent-posts
    .post-item
      margin: 0 0 1.5rem
      padding: 1.25rem

  .main-content-layout
    padding: 1.25rem

  .archive-inner
    margin-left: .5rem

    .article-sort-title
      margin-bottom: .8rem
      font-size: 1rem

    .article-sort-item
      margin-bottom: .5rem

  .comments
    .gitment-editor-tab
      padding: 11px 8px

    .gitment-editor-login
      margin-right: 8px

    .gitment-editor-footer-tip
      margin-bottom: 10px
