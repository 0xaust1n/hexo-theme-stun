// $main-width: A calc value.
// -----------------------------------------
@media screen and (min-width: $main-responsive-width)
  #header
    width: 100%

  .header-nav-inner
    width: $main-width

  .main-inner
    width: $main-width

// $md-width: 992px - 0.02px
// -----------------------------------------
@media screen and (max-width: $md-width)
  #header,
  #footer
    background-attachment: local

  #header
    height: 340px

  #main
    margin: 1rem 0

  #sidebar
    display: none

  .main-inner
    width: 100%

  .content
    padding: 0 .8rem
    width: 100%

  #recent-posts article.post-item
    margin: 0 0 1rem
    padding: .8rem 1rem

// sm-width: 768px - 0.02px
// -----------------------------------------
@media screen and (min-width: $sm-width)
  .header-nav-inner
    .header-nav-menu
      visibility: visible
      opacity: 1

@media screen and (max-width: $sm-width)
  .header-nav-menu
    visibility: hidden
    border-radius: 3px
    width: 100%
    height: auto
    background-color: alpha($header-nav-bg-color, .7)
    opacity: 0

    span
      float: none
      margin: 0

    a
      padding: 0 1rem
      color: $white-light !important
      user-select: none

      &:hover
        color: $white-light
        background-color: $blue-lighter

  .header-nav-menu-icon
    display: block
    float: left

  .header-info-inner
    .site-info-title
      font-size: 3.25rem

    .site-info-subtitle
      font-size: 1rem

  div.algolia-popup
    left: 0
    margin: 0 1rem
    width: calc(100% - 2rem)

// $xs-width: 576px - 0.02px
// -----------------------------------------
@media screen and (max-width: $xs-width)
  #header
    height: 240px

  #main
    margin: .8rem 0

  .content
    padding: 0 .6rem

  #recent-posts article.post-item
    margin: 0 0 .8rem
    padding: .6rem .8rem

  .header-info-inner
    .site-info-title
      font-size: 2.5rem

    .site-info-subtitle
      font-size: .8rem

  .header-nav-search
    span
      display: none

  div.algolia-results
    max-height: 10rem

    .algolia-hit-item
      margin: 0

  .post-header
    .post-title
      font-size: 1.25rem

    .post-meta
      &-create,
      &-read,
      &-word
        :first-child
          display: none

      .dot
        margin: 0 .3rem

  .reward-qr
    flex-direction: column

  .archive-inner
    margin-left: .5rem

    .article-sort-title
      margin-bottom: .8rem
      font-size: 1rem

    .article-sort-item
      margin-bottom: .5rem

  .comments
    .gitment-editor-tab
      padding: 11px 8px

    .gitment-editor-login
      margin-right: 8px

    .gitment-editor-footer-tip
      margin-bottom: 10px

  .gallery-image
    width: 100%
