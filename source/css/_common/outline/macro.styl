.container {
  position: relative;
}

.main {
  margin: 2rem auto;
  width: 100%;
}

.main-inner {
  margin: 0 auto;
  width: $main-width;
  font-size: $font-size-main;
}

.sidebar {
  float: convert(hexo-config('sidebar.position'));

  &.sticky {
    position: fixed;
    top: convert(hexo-config('sidebar.offsetTop') || '30px');
    z-index: $z-index0;
    transform: translateZ(0);
  }
}

.content {
  if (hexo-config('sidebar.position') == 'left') {
    float: right;
  } else if (hexo-config('sidebar.position') == 'right') {
    float: left;
  }

  &-inner {
    width: $content-width;
    height: 100%;
    layout-card();

    img {
      border: 1px solid $img-border-color;
      border-radius: 3px;
      padding: .2rem;
    }

    .post-body {
      if (hexo-config('heading_line')) {
        h1,
        h2 {
          border-bottom: 1px solid $heading-line-color;
          padding-bottom: .3em;
        }
      }
    }

    .table-container {
      overflow: auto;
      margin-bottom: 1rem;
    }

    .heading-link {
      color: $heading-color;
      cursor: pointer;

      &::after {
        content: $icon-heading-link;
        margin-left: .3em;
        color: $heading-logo-color;
        opacity: 0;
        transition-property: opacity;
        transition-ease();
        fontawesome-base();
      }

      &:hover {
        &::after {
          opacity: 1;
        }
      }
    }
  }
}

.content-home {
  padding: 0;
  background-color: transparent;
}
